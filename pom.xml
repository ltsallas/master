    <profiles>

        <!-- By default, include all the modules -->
        <profile>
            <id>full-build</id>
            <activation>
                <property>
                    <name>!skipFullBuild</name>
                </property>
            </activation>
            <modules>
                <!-- Common modules -->
                <module>wifi4eu-config</module>
                <module>wifi4eu-common</module>
                <module>wifi4eu-persistence</module>
                <module>wifi4eu-common-service</module>

                <!-- Webapp modules -->
                <module>wifi4eu-portal</module>
                <module>wifi4eu-public-portal</module>
                <module>wifi4eu-dgconn</module>
                <module>wifi4eu-supplier</module>
                <module>wifi4eu-procedures</module>
                <!--<module>wifi4eu-financial</module>-->
            </modules>
        </profile>

		<!-- APP PROFILES -->

        <profile>
            <id>wifi4eu-portal</id>
            <modules>
                <!-- Common modules -->
                <module>wifi4eu-config</module>
                <module>wifi4eu-common</module>
                <module>wifi4eu-persistence</module>
                <module>wifi4eu-common-service</module>
                <!-- Webapp modules -->
                <module>wifi4eu-portal</module>
            </modules>
        </profile>

		<profile>
            <id>wifi4eu-public-portal</id>
            <modules>
                <!-- Common modules -->
