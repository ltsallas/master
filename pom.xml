                <module>wifi4eu-common</module>
                <module>wifi4eu-persistence</module>
                <module>wifi4eu-common-service</module>
                <!-- Webapp modules -->
                <module>wifi4eu-supplier</module>
            </modules>
        </profile>

		<profile>
            <id>wifi4eu-financial</id>
            <modules>
                <!-- Common modules -->
                <module>wifi4eu-config</module>
                <module>wifi4eu-common</module>
                <module>wifi4eu-persistence</module>
                <module>wifi4eu-common-service</module>
                <!-- Webapp modules -->
                <module>wifi4eu-financial</module>
            </modules>
        </profile>


    </profiles>

    <build>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**/*.ttf</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources/fonts</directory>
                <filtering>false</filtering>
                <includes>
                    <include>**/*.ttf</include>
                </includes>
            </resource>
        </resources>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>${jdk.version}</source>
                        <target>${jdk.version}</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

    </build>


