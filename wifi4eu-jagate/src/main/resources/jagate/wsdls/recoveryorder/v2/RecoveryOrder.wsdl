	xmlns="http://ec.europa.eu/rdg/jagate/ws/recoveryorder/v2">

	<!-- Types -->
	<wsdl:types>
		<xs:schema>
			<xs:import namespace="http://ec.europa.eu/rdg/jagate/ws/recoveryorder/v2/interfaces" schemaLocation="RecoveryOrderInterface.xsd" />
