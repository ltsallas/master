<xs:schema xmlns:evt="http://ec.europa.eu/rdg/efp/domain/event/v1_0" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:expertRef="http://ec.europa.eu/research/fp/model/expert-ref/V1" xmlns:expert="http://ec.europa.eu/research/fp/model/expert/V1" xmlns:ns2="http://ec.europa.eu/research/fp/model/base/V1" xmlns:ns1="http://ec.europa.eu/rdg/efp/domain/event/expert/profile/bastatusupdate-event/V1" targetNamespace="http://ec.europa.eu/rdg/efp/domain/event/expert/profile/bastatusupdate-event/V1" elementFormDefault="qualified" version="1.1.0">
	<xs:import namespace="http://ec.europa.eu/rdg/efp/domain/event/v1_0" schemaLocation="../../../../../../eventbase/V0/EventBase.xsd"/>
	<xs:import namespace="http://ec.europa.eu/research/fp/model/expert-ref/V1" schemaLocation="../../../../../../expert-ref/V1/ExpertRef.xsd"/>
	<xs:import namespace="http://ec.europa.eu/research/fp/model/expert/V1" schemaLocation="../../../../../../expert/V1/Expert.xsd"/>
	<xs:import namespace="http://ec.europa.eu/research/fp/model/base/V1" schemaLocation="../../../../../../base/V1/Base.xsd"/>
	<xs:complexType name="BAStatusUpdateEventType">
		<xs:annotation>
			<xs:documentation>Event generated whenever a BAF is submitted or its status changes.</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="evt:EventBodyType">
				<xs:sequence>
					<xs:element name="BAStatus" type="expert:LEBAStatusValuesType"/>
					<xs:element name="ReasonForChange" type="xs:string">
						<xs:annotation>
							<xs:documentation>Human description of the reason for the rejection.For the other statuses is not used.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="ExpertId" type="expertRef:ExpertIdType">
						<xs:annotation>
							<xs:documentation>Identification of the expert (expert candidature number) linked to this BAF</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="BAID" type="xs:string">
						<xs:annotation>
							<xs:documentation>Identification (from Abac system) of this BA for status = VALIDATED. Otherwise this is the temporary BA ID generated by EMPP</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="StatusChangeDate" type="xs:dateTime">
						<xs:annotation>
							<xs:documentation>Date of the status change.</xs:documentation>
						</xs:annotation>
					</xs:element>
					<xs:element name="eventOriginator" type="ns2:ECUserIdType" minOccurs="0">
						<xs:annotation>
							<xs:documentation>ECAS ID of the person that tiggered this event.</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:annotation>
		<xs:documentation>v 1.0.0: Creation </xs:documentation>
		<xs:documentation>v 1.0.1: Migrated dependency on CDM from CDM 2.2.0 to CDM 2.2.1</xs:documentation>
		<xs:documentation>v 1.1.0: Migrated dependency on CDM from CDM 2.2.1 to CDM 3.0.0 (fully backward compatible)</xs:documentation>
		<xs:documentation>v 1.2.0: Migrated dependency on CDM from CDM 3.0.0 to CDM 3.2.0</xs:documentation>
	</xs:annotation>
</xs:schema>
