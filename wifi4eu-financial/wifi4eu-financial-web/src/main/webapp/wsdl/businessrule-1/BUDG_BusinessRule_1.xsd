<xs:schema xmlns="http://www.ec.europa.eu/budg/abac/br/v1" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.ec.europa.eu/budg/abac/br/v1" elementFormDefault="qualified" attributeFormDefault="unqualified" version="0.0">
	<xs:complexType name="BusinessRuleResultListType">
		<xs:sequence>
			<xs:element name="BusinessRuleResult" type="BusinessRuleResultType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="BusinessRuleResultType">
		<xs:sequence>
			<xs:element name="BusinessRuleCode" type="BusinessRuleCodeType" minOccurs="0"/>
			<xs:element name="BusinessRuleContextXpath" type="BusinessRuleContextXpathType" minOccurs="0"/>
			<xs:element name="BusinessRuleMessage" type="BusinessRuleMessageType" minOccurs="0"/>
			<xs:element name="BusinessRuleType" type="BusinessRuleTypeType" minOccurs="0"/>
			<xs:element name="DetailMessage" type="DetailMessageType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
	<xs:simpleType name="BusinessRuleCodeType">
		<xs:restriction base="xs:string"/>
	</xs:simpleType>
	<xs:simpleType name="BusinessRuleContextXpathType">
		<xs:restriction base="xs:string"/>
	</xs:simpleType>
	<xs:simpleType name="BusinessRuleMessageType">
		<xs:restriction base="xs:string"/>
	</xs:simpleType>
	<xs:simpleType name="BusinessRuleTypeType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="E"/>
			<xs:enumeration value="T"/>
			<xs:enumeration value="I"/>
			<xs:enumeration value="W"/>
			<xs:enumeration value="S"/>
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="VersionIdType" >
		<xs:restriction base="xs:string"/>
	</xs:simpleType>
	
	<xs:group name="VersionedRejectedRulesType">
		<xs:sequence>
			<xs:element name="VersionId" type="VersionIdType"/>
			<xs:element name="RejectedRules" type="BusinessRuleResultType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:group>
	
	<xs:complexType name="DetailMessageType">
		<xs:sequence>
			<xs:element name="Code" type="xs:string"/>
			<xs:element name="Description" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
