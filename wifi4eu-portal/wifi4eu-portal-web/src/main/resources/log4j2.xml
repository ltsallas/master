<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <CustomLevels>
        <CustomLevel name="BUSINESS" intLevel="250"/>
    </CustomLevels>
    <Appenders>
        <Console name="CONSOLE_APPENDER" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p | %d [%t] | [%c{1}:%L] - %m%n"/>
        </Console>
        <File name="FILE_APPENDER" fileName="../logs/wifi4eu_app.log" append="false">
            <PatternLayout>
                <Pattern>%d [%t] %-5p %c{1} - %x - %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="CRON_FILE_APPENDER" fileName="../logs/wifi4eu_cron_app.log" append="false">
            <PatternLayout>
                <Pattern>%d [%t] %-5p %c{1} - %x - %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="APPLY_FILE_APPENDER" fileName="../logs/wifi4eu_apply_app.log" append="false">
            <PatternLayout>
                <Pattern>%d [%t] %-5p %c{1} - %x - %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="ECAS_CLIENT_FILE" fileName="../logs/ecas-client.log" append="false">
            <PatternLayout>
                <Pattern>%d [%t] %-5p %c{1} - %x - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="eu.cec.digit.ecas.client.j2ee.tomcat" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="eu.cec.digit.ecas.util.httpclient" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="eu.cec.digit.commons" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="eu.cec.digit.ecas.client.filter.MetaFilter" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="eu.cec.digit.ecas.util.dependencies" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="httpclient.wire" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="org.apache" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="ECAS_CLIENT_FILE"/>
        </Logger>
        <Logger name="wifi4eu.wifi4eu.util.ScheduledTasks" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="CRON_FILE_APPENDER"/>
            <Appender-ref ref="FILE_APPENDER"/>
        </Logger>
        <Logger name="wifi4eu.wifi4eu.service.application.ApplicationService" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="APPLY_FILE_APPENDER"/>
            <Appender-ref ref="FILE_APPENDER"/>
        </Logger>
        <Logger name="wifi4eu" level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="FILE_APPENDER"/>
        </Logger>
        <Logger name="org.springframework" level="error">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="FILE_APPENDER"/>
        </Logger>
        <Root level="info">
            <Appender-ref ref="CONSOLE_APPENDER"/>
            <Appender-ref ref="FILE_APPENDER"/>
        </Root>
    </Loggers>
</Configuration>